nav.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl',role='navigation')
  div.container-fluid
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Proyectos

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
          a(ng-href='{{item.link}}',translate='') {{item.title}}
      
      ul.nav.navbar-nav.navbar-right      
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown').fa.fa-bullhorn
            | {{'LABEL_LANGUAJE' | translate}} - {{selectedLanguaje.description}}
            b.caret   
          ul.dropdown-menu
            li(ng-repeat='itemLanguaje in collectionLanguaje')
              a(href='#', ng-click='changeLanguage(itemLanguaje)', ng-class='{"fa fa-check": selectedLanguaje.key=="{{itemLanguaje.key}}"}') {{itemLanguaje.description}}